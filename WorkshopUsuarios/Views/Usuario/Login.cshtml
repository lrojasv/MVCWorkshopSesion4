
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("IniciarSesion", "Usuario"))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.Label("Usuario:")
                    <div class="col-md-10">
                        @Html.TextBox("Login")
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Password:")
                    <div class="col-md-10">
                        @Html.Password("Password")
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Log in" class="btn btn-default" />
                    </div>
                </div>
            }
        </section>
    </div>
